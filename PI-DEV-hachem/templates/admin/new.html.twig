{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h3>{{ evenement.id is defined ? '✏️ Ajouter' : '➕ Créer' }} un événement</h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.Nom, 'Nom de l\'événement') }}
                    {{ form_widget(form.Nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de l\'événement'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.Nom) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.Description, 'Description') }}
                    {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'placeholder': 'Ajoutez une description'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.Description) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.Capacite, 'Capacité') }}
                    {{ form_widget(form.Capacite, {'attr': {'class': 'form-control', 'placeholder': 'Ajoutez une capacité'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.Capacite) }}
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                    <a href="{{ path('formation_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
