{% extends 'base.html.twig' %}

{% block title %}Video Dashboard{% endblock %}

{% block body %}
    <h1>Video Dashboard</h1>
    <a href="{{ path('vlog_upload') }}" class="btn">Upload New Video</a>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.name }}</td>
                <td>
                    <a href="{{ path('vlog_video', {'id': video.id}) }}">View</a>
                    <a href="{{ path('vlog_edit', {'id': video.id}) }}">Edit</a>
                    <a href="{{ path('vlog_delete', {'id': video.id}) }}"
                       onclick="return confirm('Are you sure you want to delete this video?');">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}