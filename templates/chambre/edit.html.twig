{% extends 'chambre/chambreBase.html.twig' %}

{% block stylesheets %}
<!-- Fonts & Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        background: #f4f4f4; /* Changement du fond en gris clair */
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        background: #ffffff; /* Fond blanc du formulaire */
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 500px;
        transition: transform 0.3s ease-in-out;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 16px;
        background: #f8f9fa;
        color: #333;
        transition: 0.3s;
    }

    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        outline: none;
        background: #fff;
    }

    .btn-primary {
        background: linear-gradient(to right, #007bff, #00c6ff);
        border: none;
        padding: 12px;
        border-radius: 25px;
        font-size: 18px;
        transition: all 0.3s ease-in-out;
        color: #fff;
    }

    .btn-primary:hover {
        background: linear-gradient(to right, #00c6ff, #007bff);
        transform: scale(1.05);
    }

    .btn i {
        margin-right: 8px;
    }

    h2 {
        color: #007bff;
    }
</style>
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg animate__animated animate__fadeIn">
        <h2 class="text-center mb-4"><i class="fas fa-bed"></i> Modification de chambre</h2>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'onsubmit': 'return confirmModification();'}}) }}

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-hashtag"></i> Numéro de la chambre</label>
            {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.num) }}
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-th-large"></i> Type de chambre</label>
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-map-marker-alt"></i> Localisation</label>
            {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.localisation) }}
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-users"></i> Capacité</label>
            {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.capacite) }}
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-toggle-on"></i> État actif</label>
            {{ form_widget(form.active, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.active) }}
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-briefcase-medical"></i> Service associé</label>
            {{ form_widget(form.position, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
            {{ form_errors(form.position) }}
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Modifier
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
    function confirmModification() {
        return Swal.fire({
            title: "Confirmation",
            text: "Voulez-vous vraiment modifier cette chambre ?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Oui, modifier !"
        }).then((result) => {
            return result.isConfirmed;
        });
    }
</script>

<!-- SweetAlert2 pour une meilleure alerte -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}
