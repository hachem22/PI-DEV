{% extends 'chambre/chambreBase.html.twig' %}
{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3">
        <h2 class="text-center mb-4">modification de chambre </h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.num, 'Numéro de la chambre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.num) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.type, 'Type de chambre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.type) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.localisation, 'Localisation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.localisation) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.capacite) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.active, 'État actif', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.active, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.active) }}
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary">Modifier</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
