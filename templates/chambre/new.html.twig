{% extends 'chambre/chambreBase.html.twig' %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>
    body {
        background-color: #f1f4f8;
        font-family: 'Arial', sans-serif;
    }
    .card {
        max-width: 600px;
        margin: auto;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }
    .card-header {
        background: linear-gradient(135deg, #00aaff, #00bbaa);
        color: #fff;
        border-radius: 15px 15px 0 0;
        text-align: center;
        padding: 20px;
    }
    .form-label {
        font-weight: bold;
        color: #333;
    }
    .btn-primary {
        transition: 0.3s;
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #f9f9f9;
        transition: 0.3s;
    }
    .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .mb-3 {
        margin-bottom: 1.5rem;
    }
    .d-grid {
        margin-top: 20px;
    }
    .btn-primary {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        font-weight: bold;
    }
    .card-body {
        padding: 30px;
    }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Créer une Nouvelle Chambre</h2>
        </div>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'chambreForm'}}) }}
        
        <div class="card-body">
            <div class="mb-3">
                {{ form_label(form.num, 'Numéro de la chambre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.num) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.type, 'Type de chambre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.type) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.localisation, 'Localisation (par exemple, étage 1)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.localisation) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.position, 'Service associé', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.position, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
                {{ form_errors(form.position) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.capacite) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.active, 'État actif', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.active, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.active) }}
            </div>
            
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Créer la chambre</button>
            </div>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>

<script>
    (function() {
        'use strict'
        var form = document.getElementById('chambreForm');
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    })();
</script>

{% endblock %}
