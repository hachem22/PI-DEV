{% extends 'chambre/chambreBase.html.twig' %}

{% block title %}Liste des chambres{% endblock %}

{% block stylesheets %}
<!-- Fonts & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        background: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        margin-top: 50px;
    }

    h1 {
        color: #007bff;
        font-weight: 600;
    }

    .card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 0.9rem;
        color: #666;
    }

    .btn {
        display: flex;
        align-items: center;
        gap: 5px;
        border-radius: 25px;
        transition: 0.3s;
    }

    .btn-sm {
        padding: 8px 12px;
        font-size: 0.85rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
    }

    .btn-warning {
        background: linear-gradient(135deg, #ffb703, #ff8800);
        border: none;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        border: none;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mb-4"><i class="fas fa-bed"></i> Liste des chambres</h1>

    <div class="row">
        {% for chambre in chambres %}
            <div class="col-md-4">
                <div class="card shadow-sm mb-4 p-3">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fa-solid fa-bed"></i> Chambre {{ chambre.num }}</h5>
                        <p class="card-text"><strong><i class="fa-solid fa-tag"></i> Type:</strong> {{ chambre.type }}</p>
                        <p class="card-text"><strong><i class="fa-solid fa-map-marker-alt"></i> Localisation:</strong> {{ chambre.localisation }}</p>
                        <p class="card-text">
                            <strong><i class="fa-solid fa-hospital"></i> Service:</strong>
                            {% if chambre.position %}
                                <a href="{{ path('chambre.service', { id: chambre.position.id }) }}" class="text-decoration-none text-primary">
                                    <i class="fas fa-bed"></i> Bloc {{ chambre.position.nom }}
                                </a>
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </p>
                        <p class="card-text"><strong><i class="fa-solid fa-users"></i> Capacité:</strong> {{ chambre.capacite }}</p>
                        
                           <p class="card-text"><strong><i class="fa-solid fa-circle-info"></i> État:</strong> 
    {% if chambre.active == 'disponible' %}
        <span class="badge bg-success">Disponible</span>
    {% elseif chambre.active == 'occupee' %}
        <span class="badge bg-danger">Occupée</span>
    {% elseif chambre.active == 'maintenance' %}
        <span class="badge bg-warning">Maintenance</span>
    {% else %}
        <span class="badge bg-secondary">Inconnu</span>
    {% endif %}
</p>
                        </p>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('chambre.entretients', {id: chambre.id}) }}" class="btn btn-info btn-sm">
                                <i class="fa-solid fa-wrench"></i> Entretiens
                            </a>
                            <a href="{{ path('chambre.visualisation', {id: chambre.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-cube"></i> Visualiser 3D
                            </a>
                        </div>

                        <div class="d-flex justify-content-between mt-2">
                            <a href="{{ path('chambre.lits', {id: chambre.id}) }}" class="btn btn-secondary btn-sm">
                                <i class="fa-solid fa-bed"></i> Voir lits
                            </a>
                            <a href="{{ path('chambre.edit', {id: chambre.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fa-solid fa-pen"></i> Modifier
                            </a>
                            <a href="{{ path('chambre.supprimer', {id: chambre.id}) }}" class="btn btn-danger btn-sm" onclick="return confirmDelete();">
                                <i class="fa-solid fa-trash"></i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p class="text-muted">Aucune chambre disponible</p>
            </div>
        {% endfor %}
    </div>

    <div class="text-end mt-3">
        <a href="{{ path('chambre.new') }}" class="btn btn-success"><i class="fa-solid fa-plus"></i> Ajouter une chambre</a>
    </div>
</div>

<script>
    function confirmDelete() {
        return Swal.fire({
            title: "Êtes-vous sûr ?",
            text: "Cette action est irréversible !",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Oui, supprimer"
        }).then((result) => {
            return result.isConfirmed;
        });
    }
</script>

<!-- SweetAlert2 pour une meilleure alerte -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}
