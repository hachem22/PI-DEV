{% extends 'base.html.twig' %}

{% block title %}CareConnect - Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<!-- Header Inner -->
<div class="header-inner">
    <div class="container">
        <div class="inner">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-3 col-12">
                    <div class="logo">
                        <a href="{{ path('app_home') }}">
                            <img src="{{ asset('img/1.png') }}" alt="CareConnect">
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-12">
                    <div class="main-menu">
                        <nav class="navigation">
                            <ul class="nav menu">
                                <li class="active"><a href="{{ path('app_home') }}">Accueil</a></li>
                                <li><a href="#">Rendez-vous</a></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                                        Pharmacie <i class="fa fa-chevron-down ms-1"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_stock_pharmacie_index') }}">
                                                <i class="fa fa-pills me-2"></i>Stock
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_commande_index') }}">
                                                <i class="fa fa-list me-2"></i>Commandes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_stock_pharmacie_livraisons') }}">
                                                <i class="fa fa-truck me-2"></i>Livraisons
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li><a href="#">Événements</a></li>
                                <li><a href="#">Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-12">
                    <div class="get-quote">
                        <a href="#" class="btn">Prendre RDV</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hero Section avec Slider -->
<section class="hero-slider">
    <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('img/slider.jpg') }}" class="d-block w-100" alt="Slider 1">
                <div class="hero-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6 text-start">
                                <h1>We Provide <span class="text-primary">Medical</span> Services<br>That You Can <span class="text-primary">Trust!</span></h1>
                                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                <div class="hero-buttons">
                                    <a href="#" class="btn btn-primary">Nos Services</a>
                                    <a href="#" class="btn btn-light">En savoir plus</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/slider2.jpg') }}" class="d-block w-100" alt="Slider 2">
                <div class="hero-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6 text-start">
                                <h1>Des soins <span class="text-primary">de qualité</span><br>pour votre santé</h1>
                                <p class="lead">Une équipe de professionnels à votre service.</p>
                                <div class="hero-buttons">
                                    <a href="#" class="btn btn-primary">Prendre RDV</a>
                                    <a href="#" class="btn btn-light">Nos médecins</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/slider3.jpg') }}" class="d-block w-100" alt="Slider 3">
                <div class="hero-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6 text-start">
                                <h1>Services <span class="text-primary">d'urgence</span><br>24h/24 et 7j/7</h1>
                                <p class="lead">Disponibles à tout moment pour vous.</p>
                                <div class="hero-buttons">
                                    <a href="#" class="btn btn-primary">Urgences</a>
                                    <a href="#" class="btn btn-light">Contactez-nous</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>

<!-- Services Section -->
<section class="services-section">
    <div class="container">
        <div class="service-container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="service-box">
                        <div class="service-icon">
                            <i class="fa fa-ambulance"></i>
                        </div>
                        <h3 class="service-title">Urgences</h3>
                        <p class="service-description">Service d'urgence disponible 24h/24 et 7j/7 pour tous vos besoins médicaux urgents. Une équipe médicale qualifiée à votre service.</p>
                        <a href="#" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="service-box">
                        <div class="service-icon">
                            <i class="fa fa-user-md"></i>
                        </div>
                        <h3 class="service-title">Consultations</h3>
                        <p class="service-description">Consultez nos médecins spécialistes pour tous vos besoins en soins de santé. Prenez rendez-vous facilement en ligne.</p>
                        <a href="#" class="btn btn-primary">Prendre RDV</a>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="service-box hours-box">
                        <div class="service-icon">
                            <i class="fa fa-clock-o"></i>
                        </div>
                        <h3 class="service-title">Horaires d'ouverture</h3>
                        <ul class="hours-list">
                            <li>Lundi - Vendredi <span>8:00 - 20:00</span></li>
                            <li>Samedi <span>9:00 - 18:00</span></li>
                            <li>Dimanche <span>9:00 - 14:00</span></li>
                            <li>Urgences <span>24h/24</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="stat-box">
                    <i class="fa fa-hospital-o"></i>
                    <h2>3468</h2>
                    <p>Patients traités</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-box">
                    <i class="fa fa-user-md"></i>
                    <h2>557</h2>
                    <p>Médecins spécialistes</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-box">
                    <i class="fa fa-smile-o"></i>
                    <h2>4379</h2>
                    <p>Patients satisfaits</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-box">
                    <i class="fa fa-calendar"></i>
                    <h2>32</h2>
                    <p>Années d'expérience</p>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var myCarousel = new bootstrap.Carousel(document.getElementById('mainSlider'), {
                interval: 4000,
                wrap: true,
                pause: 'hover'
            });
        });
    </script>
{% endblock %}