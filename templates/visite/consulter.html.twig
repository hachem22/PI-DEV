{% block title %}Consultation de la Visite - {{ visite.id }}{% endblock %}

{% block content %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card" style="padding: 20px;">
            <div class="container">
                <div class="card shadow-lg p-4">
                    <h1 class="mb-4 text-center text-primary">DÃ©tails de la Visite - {{ visite.id }}</h1>

                    <ul class="list-group">
                        <li class="list-group-item"><strong>Date :</strong> {{ visite.dateVisite|date('d/m/Y') }}</li>
                        <li class="list-group-item"><strong>Diagnostic :</strong> {{ visite.diagnostic }}</li>
