{% extends 'base.html.twig' %}

{% block title %}Deleted Blogs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">ðŸ—‘ Deleted Blog Posts</h1>

        {% for blog in blogs %}
            <div class="card mb-3 p-3">
                <h4>{{ blog.title }}</h4>
                <p>{{ blog.content|slice(0, 100) }}...</p>
                <p><strong>Deleted At:</strong> {{ blog.deletedAt|date('Y-m-d H:i') }}</p>
            </div>
        {% else %}
            <p class="text-center">No deleted blogs found.</p>
        {% endfor %}

        <a href="{{ path('app_blog_index') }}" class="btn btn-secondary mt-3">Back to Blog List</a>
    </div>
{% endblock %}
