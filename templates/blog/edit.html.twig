
{% block body %}
    <link rel="stylesheet" href="{{ asset('Styles/Styles_blog/Style_edit_blog.css') }}">
    <div class="container mt-5">
        <h1 class="text-center mb-4">✏️ Edit Blog Post</h1>

        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.content) }}
        {{ form_row(form.author) }}
        {{ form_row(form.category) }}

        <button type="submit" class="btn btn-primary mt-3">Submit</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
