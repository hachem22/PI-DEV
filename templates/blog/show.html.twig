{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">{{ blog.title }}</h1>

        <div class="card shadow-lg p-4">
            <h4>Author: {{ blog.author }}</h4>
            <p>{{ blog.content }}</p>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_blog_index') }}" class="btn btn-secondary">Back to Blog List</a>
            <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-warning">Edit</a>
            <form action="{{ path('app_blog_delete', {'id': blog.id}) }}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
{% endblock %}
