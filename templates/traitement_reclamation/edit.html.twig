{% extends 'base3.html.twig' %}

{% block title %}Modifier le Traitement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center text-primary mb-4">
                <i class="fas fa-edit"></i> Modifier le Traitement
            </h2>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="row">
                {% for field in form %}
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">{{ field.vars.label }}</label>
                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        <div class="invalid-feedback">
                            {{ field.vars.help|default('Veuillez remplir ce champ.') }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a href="{{ path('app_traitement_index') }}" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        // Bootstrap validation
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
{% endblock %}
