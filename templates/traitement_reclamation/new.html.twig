{% extends 'base3.html.twig' %}

{% block title %}Nouveau Traitement{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Ajouter un Traitement</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                {{ form_errors(form.commentaire) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.dateTraitement, 'Date de Traitement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateTraitement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateTraitement) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.etat, 'Ã‰tat du Traitement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.etat, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.etat) }}
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Enregistrer
            </button>
            <a href="{{ path('app_traitement_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Annuler
            </a>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
