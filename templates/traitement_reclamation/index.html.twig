{% extends 'base3.html.twig' %}

{% block title %}Liste des Traitements{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-list"></i> Liste des Traitements</h4>
            <a href="{{ path('app_traitement_new', {'id': reclamation.id}) }}" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Ajouter un Traitement
            </a>
        </div>
        
        <div class="card-body">
            {% if traitements is not empty %}
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Commentaire</th>
                            <th>État</th>
                            <th>Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for traitement in traitements %}
                            <tr>
                                <td>{{ traitement.id }}</td>
                                
                                <td>
                                    {{ traitement.commentaire|slice(0, 50) ~ (traitement.commentaire|length > 50 ? '...' : '') }}
                                </td>
                                    
                                
                                <td>
                                    {% set etat = traitement.etat.value %}
                                    <span class="badge 
                                        {% if etat == 'En cours' %}bg-warning text-dark
                                        {% elseif etat == 'Terminé' %}bg-success
                                        {% else %}bg-secondary{% endif %}">
                                        {{ etat }}
                                    </span>
                                </td>
                                <td>{{ traitement.dateTraitement|date('d/m/Y H:i') }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_traitement_show', {'id': traitement.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_traitement_edit', {'id': traitement.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="POST" action="{{ path('app_traitement_delete', {'id': traitement.id}) }}" class="d-inline delete-form">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ traitement.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm delete-btn">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                    
                                    
                                    
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info text-center">Aucun traitement trouvé.</div>
            {% endif %}
        </div>
    </div>
</div>

{# Inclusion de SweetAlert2 #}


{% endblock %}
