{% extends 'patient/baseRendezVous.html.twig' %}

{% block title %}Sélectionner une heure{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0 text-center">Sélectionner une heure</h3>
                </div>
                <div class="card-body">
                    <h4 class="mb-4 text-center">Choisissez une heure pour le {{ rendezVous.getDate()|date('d/m/Y') }}</h4>
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.heure_selectionnee, 'Heure disponible :', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.heure_selectionnee, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Confirmer l'heure</button>
                            <a href="{{ path('ListRendezVous') }}" class="btn btn-secondary btn-lg">Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}