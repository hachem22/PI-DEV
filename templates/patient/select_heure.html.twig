{% extends 'patient/baseRendezVous.html.twig' %}

{% block title %}Sélectionner une heure{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card" style="padding: 20px;">
        <div class="container mt-5" style="width: 800px">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-lg border-0" style="margin-top: 20px;">
                        <div class="card-header bg-primary text-white text-center">
                            <h3 class="card-title mb-0">Sélectionner une heure</h3>
                        </div>
                        <div class="card-body p-5">
                            <h4 class="mb-4 text-center">Choisissez une heure pour le {{ rendezVous.getDate()|date('d/m/Y') }}</h4>
                            {{ form_start(form) }}
                            <div class="form-group mb-3">
                                {{ form_label(form.heure_selectionnee, 'Heure disponible :', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.heure_selectionnee, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Confirmer l'heure</button>
                                <a href="{{ path('ListRendezVous') }}" class="btn btn-secondary btn-lg">Annuler</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}