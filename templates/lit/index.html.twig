
{% block title %}Liste des lits{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des lits</h1>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Numéro</th>
                
                <th>Chambre associée</th>
                <th>Édition</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for lit in lits %}
                <tr>
                    <td>{{ lit.id }}</td>
                    <td>{{ lit.num }}</td>
                    
                    <td>
                        {% if lit.chambre %}
                            <a href="{{ path('lit.chambre', { id: lit.chambre.id }) }}">
                                Chambre {{ lit.chambre.num }}
                            </a>
                        {% else %}
                            <span class="text-muted">Aucune</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('lit.edit', { id: lit.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                    <td>
                        <a href="{{ path('lit.delete', { id: lit.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous vraiment supprimer ce lit ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun lit disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-end mt-3">
        <a href="{{ path('lit.new') }}" class="btn btn-success">Créer un nouveau lit</a>
    </div>
</div>
{% endblock %}
