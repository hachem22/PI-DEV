{% extends 'chambre/chambreBase.html.twig' %}

{% block title %}Liste des lits{% endblock %}

{% block stylesheets %}
<!-- Bootstrap & FontAwesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        background: #f7f7f7;
        font-family: 'Roboto', sans-serif;
        color: #333;
    }

    .container {
        margin-top: 40px;
    }

    h1 {
        text-align: center;
        font-weight: 500;
        color: #2b3d44;
    }

    .table-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .table {
        color: #333;
    }

    .table th {
        background-color: #e9ecef;
        text-align: center;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
        transform: scale(1.02);
    }

    .btn {
        font-weight: 500;
        border-radius: 20px;
        transition: all 0.3s ease;
    }

    .btn i {
        margin-right: 5px;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 0 0 8px rgba(0, 234, 255, 0.4);
    }

    .btn-warning {
        background-color: #ffcc00;
        color: black;
        border: none;
    }

    .btn-danger {
        background-color: #e53935;
        color: white;
        border: none;
    }

    .btn-success {
        background-color: #66bb6a;
        color: white;
        border: none;
    }

    .badge-danger {
        background-color: #e53935;
    }

    .text-info a {
        color: #0275d8;
    }

    .text-info a:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1><i class="fas fa-bed"></i> Liste des lits</h1>

    <div class="table-container mt-4">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th><i class="fas fa-hashtag"></i> Numéro</th>
                    <th><i class="fas fa-door-open"></i> Chambre</th>
                    <th><i class="fas fa-user-plus"></i> Patient</th>
                    <th><i class="fas fa-edit"></i> Modifier</th>
                    <th><i class="fas fa-trash-alt"></i> Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for lit in lits %}
                    <tr>
                        <td>{{ lit.num }}</td>
                        <td>{{ lit.chambre.num }}</td>
                        <td>
                            {% if lit.type == 'libre' %}
                                 <a href="{{ path('lit.affecter', { id: lit.id }) }}" class="btn btn-success btn-sm">
                                    <i class="fas fa-user-plus"></i> Affecter
                                 </a>
                             {% else %}
                                <span class="badge badge-danger">Occupé par {{ lit.patient.nom }} {{ lit.patient.prenom }}</span>
                             {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('lit.edit', { id: lit.id }) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </td>
                        <td>
                            <a href="#" class="btn btn-danger btn-sm" onclick="confirmSuppression('{{ path('lit.delete', { id: lit.id }) }}')">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun lit disponible</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-end mt-3">
        <a href="{{ path('lit.new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter un lit
        </a>
    </div>
</div>

<script>
    function confirmSuppression(deleteUrl) {
        Swal.fire({
            title: "Supprimer ce lit ?",
            text: "Cette action est irréversible !",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#e53935",
            cancelButtonColor: "#6c757d",
            confirmButtonText: "Oui, supprimer",
            cancelButtonText: "Annuler"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = deleteUrl;
            }
        });
    }
</script>

<!-- SweetAlert2 pour des alertes modernes -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}
