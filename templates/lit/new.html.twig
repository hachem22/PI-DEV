{% extends 'chambre/chambreBase.html.twig' %}
{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .btn i {
        margin-right: 5px;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
    }
    .card {
        max-width: 600px;
        margin: auto;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3">
        <h2 class="text-center mb-4"><i class="fas fa-bed"></i> Créer un nouveau lit</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.num, 'Numéro du lit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.num, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            {{ form_errors(form.num) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type, 'Type de lit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.chambre, 'Chambre associée', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.chambre, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
            {{ form_errors(form.chambre) }}
        </div>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer le lit
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
{% endblock %}
