

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3">
        <h2 class="text-center mb-4">Créer un nouveau lit</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.num, 'Numéro du lit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.num) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type, 'Type de lit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.chambre, 'Chambre associée', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.chambre, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.chambre) }}
        </div>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Créer le lit</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
