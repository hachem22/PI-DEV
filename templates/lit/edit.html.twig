{% extends 'chambre/chambreBase.html.twig' %}

{% block stylesheets %}
<!-- Fonts & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        background: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        margin-top: 50px;
    }

    h2 {
        color: #007bff;
        font-weight: 600;
        text-align: center;
    }

    .card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

    .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        padding: 12px;
        font-size: 1rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border-radius: 25px;
        transition: 0.3s ease-in-out;
    }

    .btn-primary:hover {
        transform: scale(1.05);
        background: linear-gradient(135deg, #0056b3, #0094ff);
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow-lg p-4 rounded-3">
        <h2><i class="fas fa-bed"></i> Modification du lit</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label"><i class="fas fa-hashtag"></i> Numéro du lit</label>
                {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label"><i class="fas fa-th-large"></i> Type de lit</label>
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-door-open"></i> Chambre associée</label>
            {{ form_widget(form.chambre, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary" onclick="return confirmModification(event);">
                <i class="fas fa-save"></i> Modifier
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
    function confirmModification(event) {
        event.preventDefault();
        Swal.fire({
            title: "Êtes-vous sûr ?",
            text: "Voulez-vous vraiment modifier ce lit ?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#007bff",
            cancelButtonColor: "#d33",
            confirmButtonText: "Oui, modifier",
            cancelButtonText: "Annuler"
        }).then((result) => {
            if (result.isConfirmed) {
                document.querySelector("form").submit();
            }
        });
    }
</script>

<!-- SweetAlert2 pour une meilleure alerte -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}
