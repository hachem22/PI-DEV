{# templates/reclamation/index.html.twig #}
{% extends 'base1.html.twig' %}


{% block title %}Gestion des R√©clamations{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-clipboard-list"></i> Liste des R√©clamations</h2>
        <a href="{{ path('reclamation_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Nouvelle R√©clamation
        </a>
    </div>

    <!-- Barre de recherche -->
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchInput" placeholder="Rechercher une r√©clamation..." aria-label="Recherche">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Cat√©gorie</th>
                    <th>Type</th>
                    <th>Statut</th>
                    <th>Date de Cr√©ation</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.id }}</td>
                        <td class="text-truncate" style="max-width: 200px;" title="{{ reclamation.description }}">{{ reclamation.description }}</td>
                        <td><span class="badge bg-info">{{ reclamation.categorie.nom }}</span></td>
                        <td><span class="badge bg-secondary">{{ reclamation.type.value }}</span></td>
                        <td>
                            {% if reclamation.statut.value == 'en attente' %}
                                <span class="badge bg-warning text-dark">üïí {{ reclamation.statut.value }}</span>
                            {% elseif reclamation.statut.value == 'r√©solue' %}
                                <span class="badge bg-success">‚úÖ {{ reclamation.statut.value }}</span>
                            {% else %}
                                <span class="badge bg-danger">‚ùå {{ reclamation.statut.value }}</span>
                            {% endif %}
                        </td>
                        <td>{{ reclamation.datecreation|date('d/m/Y H:i') }}</td>
                        <td class="text-center">
                            <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="btn btn-info btn-sm" title="Voir"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning btn-sm" title="Modifier"><i class="fas fa-edit"></i></a>
                            <form method="post" action="{{ path('reclamation_delete', {'id': reclamation.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette r√©clamation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <button class="btn btn-danger btn-sm" title="Supprimer"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">Aucune r√©clamation trouv√©e.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
    // Filtrage dynamique des r√©clamations
    document.getElementById("searchInput").addEventListener("keyup", function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("tbody tr");

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(filter) ? "" : "none";
        });
    });
</script>
{% endblock %}
