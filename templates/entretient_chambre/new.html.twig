{% extends 'entretient_chambre/entretient_chambreBase.html.twig' %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3">
        <h2 class="text-center mb-4">Créer un nouvel entretien de chambre</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.type, 'Type d\'entretien', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.chambre, 'Chambre associée', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.chambre, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.chambre) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.datedebut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.datedebut) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.datefin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.datefin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.datefin) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.statut, 'Statut de l\'entretien', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.statut) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.details, 'Détails', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.details, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.details) }}
        </div>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Créer l'entretien</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
