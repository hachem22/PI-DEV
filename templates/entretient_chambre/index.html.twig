{% extends 'entretient_chambre/entretient_chambreBase.html.twig' %}
{% block title %}Liste des entretiens{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des entretiens</h1>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Statut</th>
                <th>Détails</th>
                <th>Chambre</th>
                <th>Édition</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for entretient in entretients %}
                <tr>
                    <td>{{ entretient.id }}</td>
                    <td>{{ entretient.type.value }}</td>
                    <td>{{ entretient.datedebut|date('d/m/Y H:i') }}</td>
                    <td>{{ entretient.datefin|date('d/m/Y H:i') }}</td>
                    <td>{{ entretient.statut.value }}</td>
                    <td>{{ entretient.details }}</td>
                    <td>{{ entretient.chambre.num }}</td>
                    <td>
                        <a href="{{ path('entretient_chambre.edit', {id: entretient.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                    <td>
                        <a href="{{ path('entretient_chambre.delete', {id: entretient.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous vraiment supprimer cet entretien ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">Aucun entretien disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-end mt-3">
        <a href="{{ path('entretient_chambre.new') }}" class="btn btn-success">Créer un nouvel entretien</a>
    </div>
</div>
{% endblock %}
