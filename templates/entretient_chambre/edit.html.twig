{% extends 'entretient_chambre/entretient_chambreBase.html.twig' %}
{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        background: #ffffff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    .form-label {
        font-weight: bold;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: 0.3s;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4"><i class="fas fa-tools"></i> Modification de l'entretien</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label"><i class="fas fa-cog"></i> Type d'entretien</label>
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label"><i class="fas fa-bed"></i> Chambre associée</label>
                {{ form_widget(form.chambre, {'attr': {'class': 'form-select'}}) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label"><i class="fas fa-calendar-alt"></i> Date de début</label>
                {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label"><i class="fas fa-calendar-check"></i> Date de fin</label>
                {{ form_widget(form.datefin, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-info-circle"></i> Statut de l'entretien</label>
            {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="fas fa-file-alt"></i> Détails</label>
            {{ form_widget(form.details, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Modifier</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".btn-primary").addEventListener("click", function () {
            alert("Les modifications ont été enregistrées avec succès !");
        });
    });
</script>
{% endblock %}
