{% extends 'base2.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fas fa-info-circle"></i> Détails de la Catégorie</h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><strong>ID:</strong> {{ categorie.id }}</li>
                <li class="list-group-item"><strong>Nom:</strong> {{ categorie.nom }}</li>
                <li class="list-group-item"><strong>Description:</strong> {{ categorie.description }}</li>
            </ul>
        </div>
        <div class="card-footer text-end">
            <a href="{{ path('categorie_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>
    </div>
</div>
{% endblock %}
