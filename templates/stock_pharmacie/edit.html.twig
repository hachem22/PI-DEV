{% extends "stock_pharmacie/navbar.html.twig" %}

{% block content %}
    <div class="content-wrapper" style="margin-top:50px;">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="row">
                <div class="col-xxl-8 mb-6 order-0">
                    <div class="card" style="width: 800px; margin-left: 190px; margin-top: 10px;">
                        <div class="d-flex align-items-start row">
                            <div class="col-sm-7">
                                <div class="card-body">
                                    <h5 class="card-title text-primary mb-3">
                                        Modifier le produit : {{ stock_pharmacie.nom }}
                                    </h5>
                                    <p>Effectuez les modifications nécessaires pour mettre à jour les informations du produit.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="edit-product-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                {{ form_start(form, {'attr': {'class': 'edit-form'}}) }}
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.type, 'Type de produit', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                                            <div class="input-group">
                                                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                                                <span class="input-group-text">€</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            {{ form_label(form.quantite, 'Quantité en stock', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(form.imageFile, 'Image du produit', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                    <div class="d-flex justify-content-between mt-4">
                                        <a href="{{ path('app_stock_pharmacie_index') }}" class="btn btn-secondary">
                                            <i class="fa fa-arrow-left me-2"></i>Retour
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save me-2"></i>Enregistrer
                                        </button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
