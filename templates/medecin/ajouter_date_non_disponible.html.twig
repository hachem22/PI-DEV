{% extends 'medecin/baseMedecin.html.twig' %}
{% block title %}Ajouter Date Non Disponible{% endblock %}

{% block content %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card" style="padding: 20px;">
            <div class="container mt-5" style="width: 1000px">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow-lg border-0" style="width: 600px; height: 400px; margin-left: -100px; margin-top: 10px;">
                            <div class="card-header bg-primary text-white text-center">
                                <h3 class="card-title mb-0">Ajouter Date Non Disponible</h3>
                            </div>
                            <div class="card-body p-5">
                                {% if form is not null %}
                                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                                    {# Champ Médecin #}
                                    <div class="mb-4">
                                        {{ form_label(form.medecin, 'Médecin', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.medecin, {'attr': {'class': 'form-select select-medecin'}}) }}
                                        {% if form.medecin.vars.errors|length > 0 %}
                                            <span style="color: red; font-size: 0.9em; margin-top: 0.5rem;">
                                                {{ form_errors(form.medecin) }}
                                            </span>
                                        {% endif %}
                                    </div>

                                    {# Champ Date Non Disponible #}
                                    <div class="mb-4">
                                        {{ form_label(form.dateNonDisponible, 'Date Non Disponible', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dateNonDisponible, {'attr': {'class': 'form-control select-date', 'type': 'date'}}) }}
                                        {% if form.dateNonDisponible.vars.errors|length > 0 %}
                                            <span style="color: red; font-size: 0.9em; margin-top: 0.5rem;">
                                                {{ form_errors(form.dateNonDisponible) }}
                                            </span>
                                        {% endif %}
                                    </div>

                                    {# Bouton de soumission #}
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-lg">Ajouter</button>
                                    </div>

                                    {{ form_end(form) }}
                                {% else %}
                                    <p class="text-center text-danger">Aucun médecin disponible pour le moment.</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}